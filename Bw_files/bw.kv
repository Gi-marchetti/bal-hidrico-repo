#:kivy 1.0.9

WindowManager:
    HomeScreen:
    PrevTempo:
    PrevClim:
    BalHidro:

<HomeScreen>:
    name: "home"
    BoxLayout:
        spacing: "5dp"
        orientation: "vertical"
        size: root.width, root.height
        Label:
            id: titulo
            font_size: 45  
            center_x: root.width / 2
            top: root.top -5
            text: "Nome do App"
            color: 0,0,0,1,
            bold: True
        Label:
            id: prevtemp
            font_size: 30  
            center_x: root.width / 2
            text: "Previsão do Tempo"
        Image:
            id: imageprevtemp
            source:"background.png"
            on_touch_down: 
                root.manager.transition.direction = 'left'
                if self.collide_point(*args[1].pos): app.root.current = "prevtemposcreen"; root.play_sound("Exanima OST -  Beastly Calls.mp3")     
                
        Label:
            id: prevclim
            font_size: 30  
            center_x: root.width / 2
            text: "Previsão do Clima"
        Image:
            id: imageprevclim
            source:"background.png"
            on_touch_down: 
                app.root.current = "prevclimscreen"
                if self.collide_point(*args[1].pos): root.manager.transition.direction = 'left'; root.play_sound("Exanima OST -  Beastly Calls.mp3")   
        Label:
            id: balhid
            font_size: 30  
            center_x: root.width / 2
            text: "Balanço Hídrico"
        Image:
            id: imagebalhid
            source:"background.png"
            on_touch_down: 
                root.manager.transition.direction = 'left'
                if self.collide_point(*args[1].pos): app.root.current = "balhidscreen"; root.play_sound("Exanima OST -  Beastly Calls.mp3") 
                                  
<PrevTempo>:
    name: "prevtemposcreen"
    BoxLayout:
        spacing: "5dp"
        orientation: "vertical"
        size: root.width, root.height
        BoxLayout:
            orientation: "horizontal"
            spacing: "5dp"
            size_hint: None,None
            size: root.width, root.height-550
            Image:
                id: back
                fit_mode: "contain"
                source: "background.png" 
                pos_y: root.y - 300
                on_touch_down: 
                    root.manager.transition.direction = 'right'
                    if self.collide_point(*args[1].pos): app.root.current = "home"; app.root.stop_sound() 
                     
            Label:
                id: titleprevtempo
                font_size: 30  
                center_x: 3*root.width / 4
                top: root.top -5
                text: "Previsão do Tempo"
                color: 0,0,0,1,
                bold: True
        BoxLayout:
            spacing: "5dp"
            orientation: "vertical"
            size: root.width, root.height
            Image:
                id: graphprevtemp
                source:"background.png"
            Label:
                id: prevtemplist
                font_size: 30  
                center_x: root.width / 2
                text: "listinha"   

<PrevClim>:
    name: "prevclimscreen"
    BoxLayout:
        spacing: "5dp"
        orientation: "vertical"
        size: root.width, root.height
        GridLayout:
            spacing: "5dp"
            cols: 2
            Image:
                id: back
                source: "background.png"
                on_touch_down: 
                    root.manager.transition.direction = 'right'
                    if self.collide_point(*args[1].pos): app.root.current = "home"; app.root.stop_sound() 
                    
            Label:
                id: titleprevclim
                font_size: 45  
                center_x: root.width / 2
                top: root.top -5
                text: "Previsão do Clima"
                color: 0,0,0,1,
                bold: True    
        BoxLayout:
            spacing: "5dp"
            orientation: "vertical"
            size: root.width, root.height        
            Image:
                id: graphprevclim
                source:"background.png"
            Label:
                id: prevclimlist
                font_size: 30  
                center_x: root.width / 2
                text: "listinha"                    

<BalHidro>:
    name: "balhidscreen"
    BoxLayout:
        spacing: "5dp"
        orientation: "vertical"
        size: root.width, root.height
        GridLayout:
            spacing: "5dp"
            cols: 2
            Image:
                id: back
                source: "background.png"
                on_touch_down: 
                    root.manager.transition.direction = 'right'
                    if self.collide_point(*args[1].pos): app.root.current = "home"; app.root.stop_sound() 
                    
            Label:
                id: titlebalhid
                font_size: 45  
                center_x: root.width / 2
                top: root.top -5
                text: "Balanço Hídrico"
                color: 0,0,0,1,
                bold: True
        BoxLayout:
            spacing: "5dp"
            orientation: "vertical"
            size: root.width, root.height
            Image:
                id: graphbalhid
                source:"background.png"
            Label:
                id: balhidlist
                font_size: 30  
                center_x: root.width / 2
                text: "listinha"                                